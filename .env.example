# Environment Configuration Template
# Copy this file to .env and update with your actual credentials
# NEVER commit the .env file to version control

# Database Configuration
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_database_username
DB_PASS=your_database_password

# MinIO Object Storage Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your_minio_access_key_here
MINIO_SECRET_KEY=your_minio_secret_key_here
MINIO_BUCKET=studygroup
MINIO_USE_SSL=false

# WebSocket Server Configuration
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=8080

# Application Configuration
APP_URL=http://localhost/VirtualStudyGroup
APP_ENV=development
APP_DEBUG=true

# Upload Settings
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,txt,jpg,jpeg,png

# Session Configuration
SESSION_LIFETIME=3600
SESSION_SECURE=false
SESSION_HTTPONLY=true

# Security Settings
CSRF_PROTECTION=true
PASSWORD_MIN_LENGTH=8
